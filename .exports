# vscode as default
export EDITOR='code'

# your project folder that we can `c [tab]` to
export PROJECTS=~/Documents/Projects

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG=en_US.UTF-8

export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# here's LS_COLORS
# github.com/trapd00r/LS_COLORS
command -v gdircolors >/dev/null 2>&1 || alias gdircolors="dircolors"
eval "$(gdircolors -b ~/.dircolors)"

# Erlang and Elixir shell history:
export ERL_AFLAGS="-kernel shell_history enabled"

PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/local/opt/openssl/lib/pkgconfig
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/local/opt/openssl/lib/pkgconfig

# rust: share build artefact amongst all rust workspaces
# disable for now since it doesn't work with RLS
# export RUSTC_WRAPPER=sccache
